{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2024",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
